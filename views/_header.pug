header.header
  nav.nav.nav--tours
    a(href='/').nav__el All tours
  .header__logo
    img(src='/assets/image/logo-white.png' alt="Natours logo")
  nav.nav.nav--user
    if user
      a(href='/').nav__el.nav__el--logout Log out
      a(href='/me').nav__el 
        img(src=`/assets/image/users/${user.photo}` alt=`photo of ${user.name}`).nav__user-img
        span= user.name
    else
      a.nav__el(href='/login') Log in
      a.nav__el.nav__el--cta(href='#') Sign up